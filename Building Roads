#include<bits/stdc++.h>
using namespace std;
const int N=1e5+9;
vector<int>grid[N];
int visited[N];
void dfs(int node){
    visited[node]=1;
    for(int i=0;i<grid[node].size();i++){
        if(visited[grid[node][i]]==0) dfs(grid[node][i]);
    }
}
int main(){
    int n,m;
    cin>>n>>m;
    for(int i=0;i<m;i++){
        int x,y;
        cin>>x>>y;
        grid[x].push_back(y);
        grid[y].push_back(x);
    }
    vector<int>v;
    for(int i=1;i<=n;i++){
        if(visited[i]==0){
            dfs(i);
            v.push_back(i);
        }
    }
    //cout<<v.size()<<" -- ";
    if(v.size()<=1){
        cout<<0<<endl;
        return 0;
    }
    cout<<v.size()-1<<endl;
    for(int i=0;i<v.size()-1;i++) cout<<v[i]<<" "<<v[i+1]<<endl;
}
