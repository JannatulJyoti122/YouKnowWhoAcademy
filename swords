#include <bits/stdc++.h>
using namespace std;
using ll=long long int;
int main(){
    ll n;
    cin>>n;
    ll mx=0;
    ll a[n];
    for(ll i=0;i<n;i++){
        cin>>a[i];
        mx=max(mx,a[i]);
    }
    ll sum=0;
    for(ll i=0;i<n;i++){
        a[i]=mx-a[i];
        sum+=a[i];
    }
    vector<ll>v;
    for(ll i=1;i*i<=sum;i++){
        if(sum%i==0){
            v.push_back(i);
            if(i!=sum/i) v.push_back(sum/i);
        }
    }
    sort(v.begin(),v.end());
    ll people=0,swad=0;
    for(ll i=0;i<v.size();i++){
        ll d=sum/v[i];
        int notok=0;
        for(ll j=0;j<n;j++){
            if(a[j]%d>0){
                notok++;
                break;
            }
        }
        if(notok==0){
            people=v[i];
            swad=sum/v[i];
            break;
        }
    }
    cout<<people<<" "<<swad<<endl;
}
