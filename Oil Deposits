#include<bits/stdc++.h>
using namespace std;
char grid[105][105];
int visited[105][105];
void dfs(int aa,int bb){
    visited[aa][bb]=1;
    for(int i=-1;i<=1;i++){
        for(int j=-1;j<=1;j++){
            if(aa+i<1||bb+j<1||aa+i>101||bb+j>101) continue;
            if(grid[aa+i][bb+j]=='@'&&visited[aa+i][bb+j]==0)
                dfs(aa+i,bb+j);
        }
    }
}
int main(){
    int n,m;
    while(1){
        cin>>m>>n;
        if(m==0) break;
        for(int i=0;i<=100;i++){
            for(int j=0;j<=100;j++){
                grid[i][j]='0';
                visited[i][j]=0;
            }
        }
        for(int i=1;i<=m;i++){
            for(int j=1;j<=n;j++){
                cin>>grid[i][j];
            }
        }
        int ct=0;
        for(int i=1;i<=m;i++){
            for(int j=1;j<=n;j++){
                if(visited[i][j]==0&&grid[i][j]=='@'){
                    dfs(i,j);
                    ct++;
                }
            }
        }
        cout<<ct<<endl;
    }
}
